@inherits ComponentBase

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Login To System</MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField InputType="InputType.Email" @bind-Value="UserName" Label="Email"></MudTextField>
        <MudTextField InputType="InputType.Password" @bind-Value="Password" Label="Password"></MudTextField>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary">Login</MudButton>
    </DialogActions>
</MudDialog>

@code {
    
    
    public string? UserName { get; set; }
    
    public string? Password { get; set; }
}